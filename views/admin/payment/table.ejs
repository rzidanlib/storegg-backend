<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No. </th>
      <th>Tipe Pembayaran</th>
      <th>Bank</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < payment.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => { %>
        <span class="badge badge-warning rounded p-1"><%= bank.name %> - <%= bank.bankName %> (Rek <%= bank.noRekening %> )</span>
        <% }) %>
      </td>
      <td>
        <% if(payment[i].status === "Y") { %>
        <span class="badge badge-success rounded p-1">Aktif</span>
        <% } else { %>
        <span class="badge badge-danger rounded p-1">Tidak Aktif</span>
        <% } %>
      </td>
      <td>
        <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Ubah</a>
        <form action="/payment/delete/<%= payment[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
          <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Hapus</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>