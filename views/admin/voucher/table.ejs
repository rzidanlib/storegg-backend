<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No. </th>
      <th>Nama Game</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < voucher.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= voucher[i].name %></td>
      <td><%= voucher[i]?.category?.name ?? "-" %></td>
      <td>
        <% voucher[i].nominals.forEach(nominal => { %>
        <span class="badeg badge-warning rounded p-1"><%= nominal.coinName %> - <%= nominal.coinQuantity %></span>
        <% }) %>
      </td>
      <td>
        <% if(voucher[i].status === "Y") { %>
        <span class="badeg badge-success rounded p-1">Aktif</span>
        <% } else { %>
        <span class="badeg badge-danger rounded p-1">Tidak Aktif</span>
        <% } %>
      </td>
      <td>
        <form action="" style="display: inline-block;">
          <button class="btn btn-primary btn-sm">
            <i class="fas fa-folder"></i>
            <% if(voucher[i].status === "Y") { %>
            Non Aktifkan
            <% } else { %>
            Aktifkan
            <% } %>
          </button>
        </form>
        <a href="/voucher/edit/<%= voucher[i]._id %>" class="btn btn-info btn-sm"><i class="fas fa-pencil-alt"></i> Ubah</a>
        <form action="/voucher/delete/<%= voucher[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
          <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Hapus</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>