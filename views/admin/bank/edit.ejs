<%- include('../../partials/header') %>
<%- include('../../partials/navbar') %>
<%- include('../../partials/sidebar') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Bank "<%= bank.name %>" </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Nama Pemilik Akun</label>
                  <input type="text" value="<%= bank.name %>" class="form-control" name="name" id="name" placeholder="Masukan nama pemilik akun bank kategori" required>
                </div>
                <div class="form-group">
                  <label>Nama Bank</label>
                  <select class="form-control select2" style="width: 100%;" name="bankName" id="bankName" required>
                    <option value="BNI" <% if (bank.bankName === "BNI") { %> selected <% } %>>BNI</option>
                    <option value="BRI" <% if (bank.bankName === "BRI") { %> selected <% } %>>BRI</option>
                    <option value="Mandiri" <% if (bank.bankName === "Mandiri") { %> selected <% } %>>Mandiri</option>
                    <option value="BCA" <% if (bank.bankName === "BCA") { %> selected <% } %>>BCA</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="noRekening">No Rekening</label>
                  <input type="number" value="<%= bank.noRekening %>" class="form-control" name="noRekening" id="noRekening" placeholder="Masukan no rekening kategori" required>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer') %>
<%- include('../../partials/js') %>