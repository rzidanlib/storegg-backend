<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No. </th>
      <th>Nama Game</th>
      <th>Item</th>
      <th>Total Harga</th>
      <th>Status</th>
      <th>Nama Player</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < transaction.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td>
        <ul class="list-inline">
          <li class="list-inline-item">
            <img width="48px" height="48px" src="http://localhost:3001/uploads/<%= transaction[i]?.historyVoucherTopup?.thumbnail %>" alt="thumbnail game">
          </li>
        </ul>
        <%= transaction[i]?.historyVoucherTopup?.gameName %>
        <br>
        <%= transaction[i]?.historyVoucherTopup?.category %>
      </td>

      <td>
        <%= transaction[i]?.historyVoucherTopup?.coinQuantity %>
        <%= transaction[i]?.historyVoucherTopup?.coinName %>
      </td>

      <td>
        <%= transaction[i].value %>
      </td>

      <td>
        <% if(transaction[i].status === "pending") { %>
        <span class="badge badge-warning rounded p-1"><%= transaction[i].status %></span>
        <% } else if (transaction[i].status === "success") { %>
        <span class="badge badge-success rounded p-1"><%= transaction[i].status %></span>
        <% } else { %>
        <span class="badge badge-danger rounded p-1"><%= transaction[i].status %></span>
        <% } %>
      </td>

      <td>
        <%= transaction[i]?.player?.name ?? "-" %>
      </td>

      <td>
        <form action="/transaction/status/<%= transaction[i]._id %>?status=success&_method=PUT" method="POST" style="display: inline-block;">
          <button class="btn btn-info btn-sm"><i class="fas fa-check"></i> Terima</button>
        </form>
        <form action="/transaction/status/<%= transaction[i]._id %>?status=failed&_method=PUT" method="POST" style="display: inline-block;">
          <button class="btn btn-danger btn-sm"><i class="fas fa-times-circle"></i> Tolak</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>